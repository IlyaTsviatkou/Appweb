@model Appweb.Domain.Core.RegisterViewModel

<body >
    
        <h2>Registration new user</h2>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div >
                <label class="col-form-label" asp-for="Email" ></label><br />
                <input class="form-control" style="width:auto" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Name"></label><br />
                <input class="form-control" style="width:auto" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br />
                <input class="form-control" style="width:auto"  asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm"></label><br />
                <input class="form-control" style="width:auto"  asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input type="submit" style="margin-top:10px;" class="btn btn-outline-dark" value="Registration" />
            </div>
        </form>
    
</body>
