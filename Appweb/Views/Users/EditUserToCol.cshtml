@model List<Appweb.ViewModels.UserColViewModel>
@using Microsoft.AspNetCore.Identity;
@inject UserManager<User> userInManager
@inject SignInManager<User> signInManager
@{
    ViewBag.Title = "Adding collection";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <form asp-action="CreatePlant" asp-controller="Users">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model[0].Name" class="control-label">Name</label>
                    <input type="text" asp-for="@Model[0].Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model[0].Description" class="control-label">Description</label>
                    <input type="text" asp-for="@Model[0].Description" class="form-control" />
                </div>
            </form>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {

                @if (!User.IsInRole("Admin"))
                {
                    if (Model[i].UserId == userInManager.GetUserId(User))
                    {
                        Model[i].IsSelected = true;
                    }
                }
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input asp-for="@Model[i].IsSelected" class="custom-radio" />
                            <label class="custom-radio">
                                @Model[i].UserName
                            </label>
                        </div>  
                
            }

        </div>

        <div class="card-footer">
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[0].UserId" />
                <input asp-for="@Model[0].Book" class="custom-radio" />
                <label class="custom-radio">
                    Book
                </label>
            </div>
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[0].UserId" />
                <input asp-for="@Model[0].Car" class="custom-radio" />
                <label class="custom-radio">
                    Car
                </label>
            </div>
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[0].UserId" />
                <input asp-for="@Model[0].Phone" class="custom-radio" />
                <label class="custom-radio">
                    Phone
                </label>
            </div>
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[0].UserId" />
                <input asp-for="@Model[0].Plant" class="custom-radio" />
                <label class="custom-radio">
                    Plant
                </label>
            </div>
        </div>
        <div>
            <input type="submit" value="Create" class="btn btn-primary" style="width:auto" />
            <a asp-action="Index1" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
