@model Appweb.ViewModels.CollectionViewModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager
@inject UserManager<User> userInManager
@{
    ViewBag.Title = "Books";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<form method="post">
    <div class="row form-group">
        <div class="col-md-7">
            <input asp-for="@Model.Text" asp-route-id="@Model.CollectionID" class="form-control" id="TextSearchInput" placeholder="Enter text for full text search" />
        </div>
        <div class="col-md-5">
            <button class="btn btn-success" id="ApplyTextSearchButton">Search</button>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Author</th>
        <th>Description</th>

    </tr>

    @if (Model.Books != null) foreach (var item in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                @if ((signInManager.IsSignedIn(User) && User.IsInRole("Admin")) || userInManager.GetUserId(User) == Model.UserID)
                {
                    <td>
                        <form asp-action="DeleteBook" asp-route-id="@item.BookID" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="EditBook" asp-route-id="@item.BookID">Change</a>

                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                            <a class="btn btn-sm btn-primary" asp-action="EditComment" asp-route-id="@item.BookID">Comments</a>
                        </form>
                    </td>
                }

            </tr>
        }
</table>


@if ((signInManager.IsSignedIn(User) && User.IsInRole("Admin")) || userInManager.GetUserId(User) == Model.UserID)
{
    <div class="form-group">
        <a class="btn btn-sm btn-primary" asp-action="CreateBook" asp-route-id="@Model.CollectionID">Add</a>
        <a class="btn btn-sm btn-primary" asp-action="DeleteCollection" asp-route-id="@Model.CollectionID">Delete</a>
    </div>
}
