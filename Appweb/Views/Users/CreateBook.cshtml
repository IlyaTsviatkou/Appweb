@model Appweb.ViewModels.CreateBookViewModel
@{
    ViewBag.Title = "Adding Book";
}
    <form asp-action="CreateBook" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label">Type</label>
            <input type="text" asp-for="Type" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Author" class="control-label">Author</label>
            <input type="text" asp-for="Author" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-outline-secondary" />
        </div>
    </form>